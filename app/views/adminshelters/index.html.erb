<div class="row mt-3 flex-column align-items-center" id="shelters">
  <% @shelters.each do |shelter| %>
    <div class="col-3 m-4 p-2 shadow">
      <table class="table">
        <tr>
          <th>Shelter Name</th>
          <th>Pet Count</th>
        </tr>
        <tr>
          <td><%= shelter.name %></td>
          <td><%= shelter.pet_count %></td>
        </tr>
      </table>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col d-flex justify-content-center">
    <h1>Shelters with Pending Applications</h1>
  </div>
</div>
<div class="row">
  <% @applications.each do |app| %>
  <%# AR method would be `distinct`%>
    <% app.find_distinct.each do |pet| %>
      <div class="col">
        <h3><%= pet.shelter_name %></h3>
      </div>
    <% end %>
  <% end %>
</div>
